<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/igLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:singleLine="false"
        android:text="Login"
        android:textColor="#fd7777"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPass"
        android:layout_alignStart="@+id/tvPass"
        android:layout_below="@+id/igLogo"
        android:layout_marginTop="30dp"
        android:text="Your Name : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/tvName"
        android:layout_toRightOf="@+id/tvName"
        android:background="@android:drawable/editbox_background"
        android:inputType="textCapWords" />

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="38dp"
        android:text="Your Pass : "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPass"
        android:layout_alignLeft="@+id/edName"
        android:layout_alignStart="@+id/edName"
        android:background="@android:drawable/editbox_background"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPass"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/btnLogin"
        android:layout_toRightOf="@+id/btnLogin"
        android:text="Cancel" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edPass"
        android:layout_alignStart="@+id/edPass"
        android:layout_alignTop="@+id/btnCancel"
        android:text="Login" />


</RelativeLayout>